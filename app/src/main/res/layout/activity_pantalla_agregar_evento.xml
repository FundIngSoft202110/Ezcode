<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background260"
    tools:context=".PantallaAgregarEvento">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Crear evento nuevo"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/campoNombreEvento"
        android:layout_width="309dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/textfieldstyle"
        android:backgroundTint="@color/FondoBorroso"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/textoFechaInicio"
        android:layout_width="309dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/textfieldstyle"
        android:backgroundTint="@color/FondoBorroso"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Fecha / hora de inicio"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campoNombreEvento" />

    <EditText
        android:id="@+id/textoFechaFin"
        android:layout_width="309dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textfieldstyle"
        android:backgroundTint="@color/FondoBorroso"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Fecha / hora de fin"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoFechaInicio" />

    <Switch
        android:id="@+id/switchTipoEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Es una clase?"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoFechaFin" />

    <EditText
        android:id="@+id/campoDescripcionActividad"
        android:layout_width="309dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textfieldstyle"
        android:backgroundTint="@color/FondoBorroso"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Descripcion"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchTipoEvento" />

    <EditText
        android:id="@+id/campoProfesorClase"
        android:layout_width="309dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textfieldstyle"
        android:backgroundTint="@color/FondoBorroso"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Profesor"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchTipoEvento" />

    <EditText
        android:id="@+id/campoSalonClase"
        android:layout_width="309dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textfieldstyle"
        android:backgroundTint="@color/FondoBorroso"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Salon"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campoProfesorClase" />

    <Button
        android:id="@+id/botonAgregarEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/Botones"
        android:fontFamily="@font/roboto_medium"
        android:text="Agregar evento"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoRepeticion"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/botonRepeticionEvento"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="148dp"
        android:layout_height="44dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/roboto_medium"
        android:text="RepeticiÃ³n"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoFechaFin" />

    <TextView
        android:id="@+id/textoRepeticion"
        android:layout_width="293dp"
        android:layout_height="53dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonRepeticionEvento" />

</androidx.constraintlayout.widget.ConstraintLayout>